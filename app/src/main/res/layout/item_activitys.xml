<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/AssociationItem_CV_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="100dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/AssociationItem_TV_title"
            android:text="这是一个标题"
            android:paddingLeft="5dp"
            android:textColor="@color/dack"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="30dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/AssociationItem_IV_picture"
                android:layout_margin="5dp"
                android:layout_width="100dp"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/AssociationItem_TV_interduction"
                    android:padding="5dp"
                    android:maxLines="2"
                    android:textSize="10sp"
                    android:text="123123123"
                    android:ellipsize="end"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>
                <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/AssociationItem_TV_time"
                    android:textSize="12sp"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="时间"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/AssociationItem_TV_site"
                    android:textSize="12sp"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="地点"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>